{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 700,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/stin0018/FIT3179-Assignment2/main/museums_per_LAD.csv"
  },
  "transform": [
    {
      "calculate": "toNumber(datum.Counts) * toNumber(datum.People_per_museum)",
      "as": "Total_population"
    },
    {
      "calculate": "toNumber(datum.Counts)",
      "as": "Counts_num"
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "Counts_num", "order": "descending"}]
    },
    {"filter": "datum.rank <= 30"}
  ],
  "mark": {"type": "circle", "filled": true, "tooltip": true, "size": 300},
  "encoding": {
    "x": {
      "field": "Counts_num",
      "type": "quantitative",
      "title": "Number of Museums"
    },
    "y": {
      "field": "Total_population",
      "type": "quantitative",
      "title": "Total Population"
    },
    "tooltip": [
      {"field": "LAD_name", "title": "LAD Name"},
      {"field": "Counts_num", "title": "Number of Museums"},
      {"field": "Total_population", "title": "Total Population"}
    ]
  }
}
