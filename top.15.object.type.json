{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 15 Object Types in the British Museum",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/stin0018/FIT3179-Assignment2/refs/heads/main/british_museum_object_counts_by_type.csv"
  },
  "transform": [
    {
      "window": [{"op": "row_number", "as": "row_num"}]
    },
    {
      "filter": "datum.row_num <= 15"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "count",
      "type": "quantitative",
      "title": "Number of Objects"
    },
    "y": {
      "field": "object_type_clean",
      "type": "ordinal",
      "sort": "-x",
      "title": "Object Type"
    },
    "tooltip": [
      {"field": "object_type_clean", "title": "Object Type"},
      {"field": "count", "title": "Number of Objects"}
    ]
  }
}
